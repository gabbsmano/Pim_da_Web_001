<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Colaborador - Pim_da_Web_001</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container main-container">
        <!-- Botão para abrir o modal de cadastro -->
        <div class="text-center">
            <button type="button" class="btn btn-primary btn-cadastrar" data-bs-toggle="modal" data-bs-target="#cadastroColaboradorModal">
                Cadastrar Colaborador
            </button>
        </div>

        <!-- Seção de colaboradores já cadastrados -->
        <div class="table-section">
            <h3>Colaboradores Cadastrados</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Função</th>
                        <th>Empresa</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Exemplo de colaboradores cadastrados -->
                    <tr>
                        <td>1</td>
                        <td>João da Silva</td>
                        <td>Desenvolvedor</td>
                        <td>Empresa X</td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editarColaboradorModal1">Editar</button>
                            <button class="btn btn-danger btn-sm">Excluir</button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Maria Souza</td>
                        <td>Designer</td>
                        <td>Empresa Y</td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editarColaboradorModal2">Editar</button>
                            <button class="btn btn-danger btn-sm">Excluir</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal para cadastro de colaborador -->
    <div class="modal fade" id="cadastroColaboradorModal" tabindex="-1" aria-labelledby="cadastroColaboradorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cadastroColaboradorModalLabel">Cadastro de Colaborador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formCadastroColaborador">
                        <div class="mb-3">
                            <label for="nomeColaborador" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nomeColaborador" placeholder="Digite o nome do colaborador">
                        </div>
                        <div class="mb-3">
                            <label for="funcaoColaborador" class="form-label">Função</label>
                            <input type="text" class="form-control" id="funcaoColaborador" placeholder="Digite a função do colaborador">
                        </div>
                        <div class="mb-3">
                            <label for="empresaColaborador" class="form-label">Empresa</label>
                            <input type="text" class="form-control" id="empresaColaborador" placeholder="Digite o nome da empresa">
                        </div>
                        <div class="mb-3">
                            <label for="emailColaborador" class="form-label">Email</label>
                            <input type="email" class="form-control" id="emailColaborador" placeholder="Digite o email do colaborador">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" onclick="cadastrarColaborador()">Cadastrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para editar colaborador (Exemplo para João da Silva) -->
    <div class="modal fade" id="editarColaboradorModal1" tabindex="-1" aria-labelledby="editarColaboradorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarColaboradorModalLabel">Editar Colaborador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formEditarColaborador1">
                        <div class="mb-3">
                            <label for="editarNomeColaborador" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="editarNomeColaborador" value="João da Silva">
                        </div>
                        <div class="mb-3">
                            <label for="editarFuncaoColaborador" class="form-label">Função</label>
                            <input type="text" class="form-control" id="editarFuncaoColaborador" value="Desenvolvedor">
                        </div>
                        <div class="mb-3">
                            <label for="editarEmpresaColaborador" class="form-label">Empresa</label>
                            <input type="text" class="form-control" id="editarEmpresaColaborador" value="Empresa X">
                        </div>
                        <div class="mb-3">
                            <label for="editarEmailColaborador" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editarEmailColaborador" value="joao.silva@empresa.com">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer text-center">
        <p>&copy; 2024 - Pim_da_Web_001 - <a href="#">Privacy</a></p>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Funções JavaScript -->
    <script>
        function cadastrarColaborador() {
            // Função de exemplo para cadastrar o colaborador
            let nome = document.getElementById("nomeColaborador").value;
            let funcao = document.getElementById("funcaoColaborador").value;
            let empresa = document.getElementById("empresaColaborador").value;
            let email = document.getElementById("emailColaborador").value;

            if (nome && funcao && empresa && email) {
                alert('Colaborador ' + nome + ' cadastrado com sucesso!');
                // Aqui você pode fazer uma chamada AJAX para cadastrar o colaborador no banco de dados
            } else {
                alert('Por favor, preencha todos os campos.');
            }
        }
    </script>

</body>
</html>
