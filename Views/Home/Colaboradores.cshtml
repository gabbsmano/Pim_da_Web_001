<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Colaborador</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Cadastro de Colaborador</h1>
        <form action="/cadastrar-colaborador" method="POST">
            <!-- Dados do Colaborador -->
            <fieldset>
                <legend>Informações do Colaborador</legend>
                <label for="usuarioID">ID do Usuário:</label>
                <input type="number" id="usuarioID" name="usuarioID" required>

                <label for="funcao">Função:</label>
                <input type="number" id="funcao" name="funcao" required>
            </fieldset>

            <!-- Dados do Usuário -->
            <fieldset>
                <legend>Informações do Usuário</legend>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="usuario[nome]" required>

                <label for="login">Login:</label>
                <input type="text" id="login" name="usuario[login]" required>

                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="usuario[senha]" required>

                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="usuario[telefone]" required>

                <label for="acesso">Acesso:</label>
                <input type="text" id="acesso" name="usuario[acesso]" required>

                <label for="ativo">Ativo:</label>
                <input type="checkbox" id="ativo" name="usuario[ativo]" checked>

                <label for="serColaborador">É Colaborador?</label>
                <input type="checkbox" id="serColaborador" name="usuario[serColaborador]" checked>
            </fieldset>

            <!-- Dados da Empresa -->
            <fieldset>
                <legend>Informações da Empresa</legend>
                <label for="empresaID">ID da Empresa:</label>
                <input type="number" id="empresaID" name="usuario[empresaID]" required>

                <label for="empresaNome">Nome da Empresa:</label>
                <input type="text" id="empresaNome" name="usuario[empresa][nome]" required>

                <label for="cnpj">CNPJ:</label>
                <input type="text" id="cnpj" name="usuario[empresa][cnpj]" required>

                <label for="razaoSocial">Razão Social:</label>
                <input type="text" id="razaoSocial" name="usuario[empresa][razaoSocial]" required>

                <label for="empresaEmail">Email:</label>
                <input type="email" id="empresaEmail" name="usuario[empresa][email]" required>

                <label for="empresaTelefone">Telefone:</label>
                <input type="text" id="empresaTelefone" name="usuario[empresa][telefone]" required>

                <label for="tipoEmpresa">Tipo de Empresa:</label>
                <input type="number" id="tipoEmpresa" name="usuario[empresa][tipoEmpresa]" required>

                <label for="possuiFilial">Possui Filial:</label>
                <input type="checkbox" id="possuiFilial" name="usuario[empresa][possuiFilial]" checked>

                <label for="rua">Rua:</label>
                <input type="text" id="rua" name="usuario[empresa][rua]" required>

                <label for="numero">Número:</label>
                <input type="text" id="numero" name="usuario[empresa][numero]" required>

                <label for="cep">CEP:</label>
                <input type="text" id="cep" name="usuario[empresa][cep]" required>

                <label for="municipioID">ID do Município:</label>
                <input type="number" id="municipioID" name="usuario[empresa][municipioID]" required>

                <!-- Dados do Município -->
                <label for="municipioNome">Nome do Município:</label>
                <input type="text" id="municipioNome" name="usuario[empresa][municipio][nome]" required>

                <label for="ufNome">Estado (UF):</label>
                <input type="text" id="ufNome" name="usuario[empresa][municipio][uf][nome]" required>

                <label for="ufSigla">Sigla do Estado (UF):</label>
                <input type="text" id="ufSigla" name="usuario[empresa][municipio][uf][sigla]" required>
            </fieldset>

            <!-- Botão de Envio -->
            <button type="submit">Cadastrar Colaborador</button>
        </form>
    </div>
</body>
</html>
