@model List<Produto>

@{
    ViewData["Title"] = "Estoque";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">

<!-- Botão para abrir o modal -->
<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addProductModal">
    <i class="fas fa-plus"></i> Adicionar Produto
</button>

<!-- Modal para adicionar produto -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Adicionar Produto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createProductForm" method="post" asp-action="CriarProduto" asp-controller="Home">
                    <div class="mb-3">
                        <label for="Nome" class="form-label">Nome do Produto</label>
                        <input type="text" class="form-control" id="Nome" name="Nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="FornecedorID" class="form-label">Fornecedor</label>
                        <select class="form-select" id="FornecedorID" name="FornecedorID" required>
                            <option value="">Selecione um fornecedor</option>
                            @foreach (var fornecedor in ViewBag.Fornecedores)
                            {
                                <option value="@fornecedor.ID">@fornecedor.Nome</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="ValorVendaKG" class="form-label">Valor (R$)</label>
                        <input type="number" step="0.01" class="form-control" id="ValorVendaKG" name="ValorVendaKG" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="submitCreateProductForm()">Salvar Produto</button>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Estoque</h1>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Valor</th>
            <th>Nome</th>
            <th>Fornecedor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.ValorVendaKG</td>
                    <td>@produto.Nome</td>
                    <td>@produto.FornecedorID</td>
                    <td>
                        <a class="btn btn-primary" asp-action="AtualizarProduto" asp-route-id="@produto.ID"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" asp-action="ExcluirProduto" asp-route-id="@produto.ID"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum produto encontrado.</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function submitCreateProductForm() {
        document.getElementById('createProductForm').submit();
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
