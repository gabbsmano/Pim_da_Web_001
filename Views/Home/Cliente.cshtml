@model ClienteViewModel

@{
    ViewData["Title"] = "Clientes";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">

<!-- Botão para abrir o modal -->
<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addClientModal">
    <i class="fas fa-plus"></i> Adicionar Produto
</button>

<!-- Modal para adicionar produto -->
<div class="modal fade" id="addClientModal" tabindex="-1" aria-labelledby="addClientModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addClienteModalLabel">Adicionar CLiente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createClienteForm" method="post" asp-action="CriarCliente" asp-controller="Cliente">
                    <div class="mb-3">;
                        <label for="Nome" class="form-label">Nome do Cliente</label>
                        <input type="text" class="form-control" id="Nome" name="Nome" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="submitCreateProductForm()">Salvar Produto</button>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Estoque</h1>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Valor</th>
            <th>Nome</th>
            <th>Fornecedor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Cliente.Any())
        {
            foreach (var cliente in Model.Cliente)
            {
                <tr>
                    <td>@cliente.Cep</td>
                    <td>@cliente.</td>
                    <td>@cliente.</td>
                    <td>
                        <a class="btn btn-primary" asp-action="AtualizarCliente" asp-route-id="@cliente.ID"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" asp-action="ExcluirCliente" asp-route-id="@cliente.ID"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum produto encontrado.</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function submitCreateClienteForm() {
        document.getElementById('createClienteForm').submit();
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>